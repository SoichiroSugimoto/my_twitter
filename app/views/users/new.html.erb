<h1>REGISTER</h1>

<%= form_with(model: @user, local: true) do |f| %>
	<%= f.label :name %><br>
	<%= f.text_field :name%>
	<br><br>

	<%= f.label :email %><br>
	<%= f.email_field :email %>
	<br><br>

	<%= f.label :password %><br>
	<%= f.password_field :password %>
	<br><br>

	<%= f.label :password_confirmation, "Confirmation" %><br>
	<%= f.password_field :password_confirmation %>
	<br><br>

	<%= f.submit "Register"%>
<% end %>
