<h1>Profile</h1>
<p>Name : <%= @user.name %> ( <%= @user.id %> ) <p>
<p>email: <%= @user.email %><p>
<br>
<% if current_user.id == @user.id %>
	<%= link_to("Let's post!", "#") %>
<% end %>

<%= render '/shared/links' %>

<% if correct_user?(@user) %>
	<h3>Post form<h3>
	<%= render '/shared/post_form' %>
<% end %>

<p>POST LIST</p>
<% if @user.posts.any? %>
	<% @user.posts.each do |post| %>
		<li><%= post.body %> | <%= link_to "delete",post , data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
	<% end %>
<% else %>
	<p>This user did not post anything yet</p>
<% end %>
